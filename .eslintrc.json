{
	"env": {
		"node": true,
		"commonjs": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"no-console": 0,
		"indent": ["error", "tab", {"SwitchCase": 1}],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single", { "allowTemplateLiterals": true }],
		"semi": ["error", "never"]
	}
}