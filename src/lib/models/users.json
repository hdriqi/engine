{
	"name": "users",
	"key": "_id",
	"desc": "Users schema",
  "attributes": {
    "username": {
      "field": "single-line-text",
      "type": "string",
      "required": true,
      "unique": true
		},
    "email": {
      "field": "single-line-text",
      "type": "string",
      "required": true,
      "unique": true
    },
    "password": {
      "field": "single-line-text",
      "type": "string",
      "required": true
		},
		"validEmail": {
      "field": "single-line-text",
      "type": "boolean",
			"required": true,
			"default": false
		},
    "role": {
      "field": "single-line-text",
      "type": "string",
      "required": true,
      "default": "user"
    }
  },
  "options": {
    "timestamps": true
  }
}